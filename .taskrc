############################# OTHER ################################################
editor=nvim	

context.Coding_Projects=+Tracker

#####################Custom Modifications#######################

# Work Reports

report.Work.columns=id,start.age,entry.age,depends.indicator,priority,project,tags,recur.indicator,scheduled.countdown,until.remaining,description.count,urgency,due
report.Work.description=All Tasks Related To Work
report.Work.filter=status:pending and tags:Work
report.Work.labels=ID,Active,Age,D,P,Project,Tags,R,Sch,Until,Description,Urg,Due
report.Work.sort=due+,urgency-,project+ 

# Daily Schedule

report.Daily.columns=id,start.age,entry.age,depends.indicator,priority,project,recur.indicator,scheduled.countdown,until.remaining,description.count,urgency,due
report.Daily.description=All Recurring Daily Chore Like Tasks
report.Daily.filter=status:pending and tags:Daily limit:20 due:today
report.Daily.labels=ID,Active,Age,D,P,Project,R,Sch,Until,Description,Urg,Due
report.Daily.sort=urgency-,project+,start-
# Standard Task task that doesn't show "DAILY".

color.tag.next=rgb440
report.next.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.next.description=Most Urgent Tasks
report.next.filter=(status:pending and !(tags:Daily)) limit:5
report.next.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg
report.next.sort=urgency-
## Setting my default editor to Vim

# Personal Tasks
report.Personal.columns=id,start.age,entry.age,depends.indicator,priority,project,recur.indicator,scheduled.countdown,due,until.remaining,description.count,urgency
report.Personal.description=Non-Repetitive Tasks You Want To Eventually Get To
report.Personal.filter=status:pending and tags:Personal limit:20
report.Personal.labels=ID,Active,Age,D,P,Project,R,Sch,Due,Until,Description,Urg
report.Personal.sort=urgency-,priority-,project+

# Deleted Tasks
report.Deleted.columns=uuid,entry.age,project,recur.indicator,description.count
report.Deleted.description=All Deleted Tasks
report.Deleted.filter=status:deleted
report.Deleted.labels=UUID,Age,Project,R,Description
report.Deleted.sort=uuid-

# Tasks Due Yesterday
report.Overdue.columns=id,start.age,entry.age,depends,priority,project,tags,recur.indicator,scheduled.countdown,due,until,description,urgency
report.Overdue.description=Tasks That Are Overdue By One Day
report.Overdue.filter=(status:pending or status:waiting) and +OVERDUE and due:yesterday                                                                       
report.Overdue.labels=ID,Active,Age,Deps,P,Project,Tag,R,S,Due,Until,Description,Urg
report.Overdue.sort=urgency-,due+


# Coding Projects I Got Going On

report.Coding.columns=id,start.age,entry.age,depends.indicator,priority,project,tags,recur.indicator,scheduled.countdown,until.remaining,description.count,urgency,due
report.Coding.description=All Tasks Related to Personal Coding Projects
report.Coding.filter=tags:Tracker limit:5
report.Coding.labels=ID,Active,Age,D,P,Project,Tags,R,Sch,Until,Description,Urg,Due
report.Coding.sort=priority-,urgency-,project+ 

# List all Tasks By Project
report.Projects.columns=id,start.age,entry.age,depends.indicator,priority,project,tags,recur.indicator,scheduled.countdown,until.remaining,description.count,urgency,due
report.Projects.description=All Current Tasks By Project
report.Projects.filter=status:pending and recur=false
report.Projects.labels=ID,Active,Age,D,P,Project,Tags,R,Sch,Until,Description,Urg,Due
report.Projects.sort=project-,due+,urgency-
# Removing the annoying TASKRC override warnings.
verbose=blank,footnote,label,new-id,affected,edit,special,project,sync,unwait
############################## UDA #################################################

# This increases the value of older entries.
urgency.age.coefficient=5.0

# Increases the value/weight of anything to do with school
urgency.user.project.Python.school.coefficient=7.0

# Decreases the weight of a "L" priority: This makes L worth less than No Priority
urgency.uda.priority.L.coefficient=-2 # low Priority

# Adds an extra Priority Label and Value
urgency.uda.priority.X.coefficient=12 # Highest Priority
uda.priority.values=X,H,M,L,


